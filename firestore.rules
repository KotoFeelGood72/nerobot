rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // SUBSCRIPTIONS
    match /subscriptions/{subId} {

      // пользователь читает только свою подписку
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // создание триала — ТОЛЬКО для себя
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.userId;

      // обновление своей подписки
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId;

      // удаление запрещаем
      allow delete: if false;
    }

    // ORDERS
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // RESPONSES - отклики на задания
    match /responses/{responseId} {
      // Разрешаем создание отклика аутентифицированным пользователям
      // Проверяем, что respondent равен текущему пользователю
      allow create: if request.auth != null
                    && request.resource.data.respondent == request.auth.uid;
      
      // Разрешаем чтение всем аутентифицированным пользователям (можно ограничить позже)
      allow read: if request.auth != null;
      
      // Разрешаем обновление только создателю отклика
      allow update: if request.auth != null
                    && resource.data.respondent == request.auth.uid;
      
      // Удаление запрещаем
      allow delete: if false;
    }

    // CHATS
    match /chats/{chatId} {
      // Разрешаем чтение участникам чата
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.participants;
      
      // Разрешаем создание аутентифицированным пользователям
      allow create: if request.auth != null;
      
      // Разрешаем обновление участникам чата
      allow update: if request.auth != null
                    && request.auth.uid in resource.data.participants;
    }

    // FEEDBACKS
    match /feedbacks/{feedbackId} {
      // Разрешаем создание аутентифицированным пользователям
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      
      // Разрешаем чтение всем аутентифицированным пользователям
      allow read: if request.auth != null;
    }

    // DEBUG
    match /debug_connect/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
